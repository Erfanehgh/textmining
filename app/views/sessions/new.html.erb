<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
<h4>
      <%= f.label :email %>
      <%= f.text_field :email %>


      <%= f.label :password %>
      <%= f.password_field :password %>
</h4>
      <%= f.submit "Sign in" , class: "follow-button" %>
    <% end %>

    <h4>New user? <%= link_to "Sign up now!", signup_path %></h4>
  </div>
</div>
